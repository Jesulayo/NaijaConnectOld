            <StackLayout Grid.Row="4" Margin="10,30,10,0">
                <Button
                    Command="{Binding NavigateSignInCommand}"
                    Style="{StaticResource WhiteButton}"
                    Text="Sign In"
                    VerticalOptions="Center" />
